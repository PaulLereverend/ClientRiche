<div style="text-align: center" class="container">
  <h1>Services</h1>
  <div style="text-align: left" class="alert alert-secondary" role="alert">
    Choisissez les élèments à inclure
    <br>
    <strong>{{model.countActive}} services sélectionnés</strong>
  </div>

  <ul class="list-group">
    {{#each model.services as |service|}}
      {{#if service.active}}
        <a href="#" class="list-group-item list-group-item-action active">{{service.name}} - {{service.price}} €</a>
      {{else}}
        <a href="#" class="list-group-item list-group-item-action">{{service.name}} - {{service.price}} €</a>
      {{/if}}

    {{/each}}

  </ul>
  
</div>
{{outlet}}